<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zadanieMAUI.MainPage">
    <StackLayout>
        <Label x:Name="trivia" Text="WELCOMENN"/>

        <RadioButton x:Name="a" Content="a" GroupName="radioButton" Value="a"/>
        <RadioButton x:Name="b" Content="b" GroupName="radioButton"/>
        <RadioButton x:Name="c" Content="c" GroupName="radioButton"/>
        <RadioButton x:Name="d" Content="d" GroupName="radioButton"/>
        <Button x:Name="Begin" Text="Begin" Clicked="Begin_Clicked"/>
        <Button x:Name="Next" Text="Next" IsVisible="false" Clicked="Next_Clicked"/>
    </StackLayout>
</ContentPage>
